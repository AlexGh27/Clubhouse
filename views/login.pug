doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Log in
  body
    h1 Log in
    form(action='/login', method='POST')
      label(for='username') Username
      input(name='username', type='text')
      label(for='password') Password
      input(name='password', type='password')
      button(type ='submit') Log in